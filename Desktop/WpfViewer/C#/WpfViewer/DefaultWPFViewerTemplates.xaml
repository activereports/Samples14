			IsEnabled="{Binding IsUIEnabled, Mode=OneWay}"
			AutomationProperties.AutomationId="SinglePageViewButton"
			ToolTipService.ToolTip="{Binding Source={StaticResource res}, Path=Resources.ToolbarTooltip_SinglePageView}">
